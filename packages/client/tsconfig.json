{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],

    "outDir": "dist/",
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },

  "exclude": [
    "dist",
    "node_modules",
  ],

  "include": [
    "**/*.ts",
  ]
}
